<%= form_with(model: [:users_backoffice, @sale], local: true) do |form| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Produto %>
    <%= form.collection_select :products, Product.order(:title), :id, :title, {include_blank: false}, { multiple: true, size: 10, class:"form-control"} %>
  </div>

  <div class="row">
    <div class="col-md-6 col-sm-6">
      <div class="field">
        <%= form.label :Quantidade %>
        <%= form.number_field :amount, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.submit "Salvar", class:"btn btn-dark" %>
    <%= link_to '', users_backoffice_sales_path, class:"btn btn-outline-info fa fa-arrow-left", style:"font-size:24px" %>
  </div>
<% end %>
