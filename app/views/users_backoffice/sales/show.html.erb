<div class="container">
  <nav class="navbar navbar-dark bg-dark">
    
    <ul class="navbar-nav">
      <li class="nav-item active">
        <div class="navbar-brand"><%= I18n.l(@sale.date_sale.to_date) %> | Lista de Produtos Vendidos - <%= @sale.client_name %> </div>
      </li>
    </ul>
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to '', "#", class:"btn btn-success btn-round fa fa-file" %>
