        <%= link_to '', users_backoffice_sales_path, class:"btn btn-danger btn-round fa fa-arrow-left" %>
      </li>
    </ul>
  </nav>
</div>

<table class="table">
  <thead>
    <tr class='tr_principal'>
      <th>CÃ³digo do produto</th>
      <th>Marca</th>
      <th>Nome do produto</th>
      <th>Valor da unidade</th>
      <th>Qtnd vendida</th>
    </tr>
  </thead>

  <% @sale.sale_items.includes(:product => :category).each do |item| %>
    <tbody>
      <tr>
        <td style="background-color:#ffc23d;color:#343a40;width:15%;"><strong><%= item.product.product_code %></strong></td>
        <td style="width:30%;"><%= item.product.company %></td>
        <td style="width:30%;"><%= item.product.title %></td>
        <td>R$ <%= item.product.price.round(2) %></td>
        <td> <%= item.sold_amount %></td>
      </tr>
    </tbody>
  <% end %>
  
    <tfoot>
      <tr>
        <td><strong>Total:</strong> <br></td>
        <td colspan='2'></td>
        <td><strong></strong>R$ <%= @sale.total_price.round(2) %></td>
        <td><strong><%= @sale.sale_items.sum(:sold_amount) %> </strong> </td>
      </tr>
    </tfoot>
</table>
