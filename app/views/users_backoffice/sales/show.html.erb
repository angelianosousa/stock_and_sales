<div class="container">
  <nav class="navbar navbar-dark bg-dark">
    
    <ul class="navbar-nav">
      <li class="nav-item active">
        <div class="navbar-brand">Lista de Produtos Vendidos - <%= @sale.sales_code%> </div>
      </li>
    </ul>
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to '', "#", class:"btn btn-primary btn-round fa fa-file" %>
        <%= link_to '', users_backoffice_sales_path, class:"btn btn-danger btn-round fa fa-arrow-left" %>
      </li>
    </ul>
  </nav>
</div>

<table class="table">
  <thead>
    <tr class='tr_principal'>
      <th>Código do produto</th>
      <th>Nome do produto</th>
      <th>Categoria</th>
      <th>Valor da unidade</th>
      <th>Qtnd vendida</th>
    </tr>
  </thead>

  <% @sale.products.each do |product| %>
    <tbody>
      <tr>
        <td style="background-color:#ffc23d;color:#343a40;width:15%;"><strong><%= product.product_code %></strong></td>
        <td style="width:30%;"><%= product.title %></td>
        <td><%= product.category.title %></td>
        <td>R$ <%= product.price_unitary.round(2) %></td>
        <td style="width:20%;"></td>
      </tr>
    </tbody>

  <% end %>
    <tfoot>
      <tr>
        <td><strong>Valor total da Venda:</strong> <br>R$ <%= @sale.products.sum(:price_unitary).round(2) %></td>
        <td><strong>Data da Venda:</strong> <br><%= I18n.l(@sale.date_sale.to_date) %></td>
        <td><strong>Total de Itens: </strong> </td>
        <td colspan='2'></td>
      </tr>
    </tfoot>
</table>

