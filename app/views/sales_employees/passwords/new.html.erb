<h2>Esqueci minha senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"example@gmail.com" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar reset de senha", class:"btn btn-warning btn-block btn-round", style:"float:none;margin-left:0;background-color:#1C1C1C;color:white;" %>
  </div>
<% end %>

