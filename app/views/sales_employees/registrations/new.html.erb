<h2>Criando conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"example@gmail.com" %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> letras no minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"********" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"********" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar", class:"btn btn-success btn-block btn-round", style:"float:none;margin-left:0;color:white;" %>
  </div>
<% end %>

<%= render "sales_employees/shared/links" %>
